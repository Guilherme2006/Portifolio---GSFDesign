# PROTEÇÃO 1: Forçar HTTPS (SSL)
# ================================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirecionar HTTP para HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]
    
    # Remover www (descomente se preferir sem www)
    # RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
</IfModule>

# PROTEÇÃO 2: Headers de Segurança
# ================================================
<IfModule mod_headers.c>
    # HSTS - Força HTTPS por 1 ano
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    
    # Proteção XSS (Cross-Site Scripting)
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevenir Clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevenir MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Content Security Policy (CSP)
    Header set Content-Security-Policy "default-src 'self' https:; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://cdnjs.cloudflare.com https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https:; frame-ancestors 'self';"
    
    # Política de Referrer
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Remover informações do servidor
    Header unset X-Powered-By
    Header always unset X-Powered-By
    
    # Permissões de recursos
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=()"
</IfModule>

# PROTEÇÃO 3: Bloquear Acesso a Arquivos Sensíveis
# ================================================

# Proteger arquivos ocultos
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquear tipos de arquivo perigosos
<FilesMatch "\.(bak|conf|log|sql|zip|tar|gz|rar|env|git|htaccess|htpasswd|ini)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# PROTEÇÃO 4: Desabilitar Listagem de Diretórios
# ================================================
Options -Indexes

# PROTEÇÃO 5: Bloquear SQL Injection
# ================================================
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Bloquear tentativas de SQL injection
    RewriteCond %{QUERY_STRING} (union|select|insert|cast|set|declare|drop|update|delete) [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Bloquear scripts maliciosos
    RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC]
    RewriteRule ^(.*)$ - [F,L]
    
    # Bloquear tentativas de travessia de diretório
    RewriteCond %{QUERY_STRING} (\.\./|\.\.\\) [OR]
    RewriteCond %{REQUEST_URI} (\.|%2e)(\.|%2e)(/|%2f)
    RewriteRule ^(.*)$ - [F,L]
</IfModule>

